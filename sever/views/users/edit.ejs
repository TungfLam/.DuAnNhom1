<%- include('../inc/top3') %>

    <H1>User Editing</H1>

    <% if(msg.length> 0){ %>
        <p class="alert alert-info">
            <%= msg %>
        </p>
        <% } %>

            <form action="" method="post" enctype="multipart/form-data">

                <label class="form-label">Ảnh Cũ</label>
                <img style="width: 150px; height: 150px;" src="<%= objUS.avata %>">
                <br>
                <label class="form-label">Ảnh đại diện mới</label>
                <input class="form-control" type="file" name="avata" value="<%= objUS.avata %>">

                <fieldset disabled>
                    <label class="form-label">Tên đăng nhập</label>
                    <input id="disabledTextInput" class="form-control" type="text" name="username"
                        value="<%= objUS.username %>" required pattern="\S+">
                </fieldset>

                <label class="form-label">Mật Khẩu</label>
                <input class="form-control" type="text" name="passwd" value="<%= objUS.passwd %>" required
                    pattern="\S+">

                <label class="form-label">Email</label>
                <input class="form-control" type="text" name="email" value="<%= objUS.email %>" required pattern="\S+">



                <label class="form-label">Số điện thoại</label>
                <input class="form-control" type="number" name="phonenumber" value="<%= objUS.phonenumber %>" required
                    pattern="\S+">

                <label class="form-label">Địa chỉ</label>
                <input class="form-control" type="text" name="address" value="<%= objUS.address %>">


                <div class="d-grid gap-2">
                    <button class="btn btn-secondary mt-4 " type="submit">Update</button>
                </div>

            </form>


            <%- include('../inc/bottom') %>