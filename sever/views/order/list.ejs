<%- include('../inc/top') %>

    <div class="col-12 col-md-7"><H1>Order Management</H1></div>
    <div class="col-12 col-md-5 align-self-center">
        <form class="d-flex" role="search"  action="" method="post">
            <input class="form-control me-2" name="searchname" type="searchname" placeholder="search by code orders"
                aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>


    <div class="col-12 ">
        <table class="table table-hover table-success ">
        <thead>
            <tr>
                <th>Code orders</th>
                <th>Buyer's name</th>
                <th>Product's name</th>
                <th>Browsing status</th>
                <th>Cancel status</th>
                <th>Completed status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% listOD.forEach((objOD)=>{ %>
                <tr>
                    <th><%= objOD._id %></th>

                    <th>
                        <% 
                        if (objOD.users != null){ %>
                            <%= objOD.users.username %>
                            <%
                        }
                        %>
                    </th>
                    <th>
                        <% 
                        if (objOD.product != null){ %>
                            <%= objOD.product.name %>
                            <%
                        }
                        %>
                    </th>

                    <th><%= objOD.statusduyet %></th>

                    <th><%= objOD.statushuydon %></th>

                    <th><%= objOD.statushoanthanh %></th>

                    <th>
                        <a href="#" class="btn btn-success btn-sm">Browsing status</a> |
                        <a href="#" class="btn btn-success btn-sm">Cancel status</a> |
                        <a href="#" class="btn btn-success btn-sm">Detail</a> |
                        <a href="#" class="btn btn-success btn-sm">Completed status</a> 
                    
                    </th>
                </tr>
                <% }); %>
        </tbody>
    </table>
    </div>

    

    <%- include('../inc/bottom') %>