<%- include('../inc/top') %>

    <div class="col-12 col-md-7"><H1>Product Management</H1></div>
    <div class="col-12 col-md-5 align-self-center">
        <form class="d-flex" role="search"  action="" method="post">
            <input class="form-control me-2" name="searchname" type="searchname" placeholder="search by product name"
                aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>


    <div class="col-12 ">
        <table class="table table-hover table-success ">
        <thead>
            <tr>
                <th>Name</th>
                <th>Avatar</th>
                <th>Introduction</th>
                <th>Price</th>
                <th>Promotion</th>
                <th>Type</th>
                <th>Color</th>
                <th>Size</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% listPD.forEach((objPD)=>{ %>
                <tr>
                    <th><a class="text-decoration-none text-dark" href="/sanpham/detail/<%= objPD._id %>"> <%= objPD.name %></a></th>

                    <th><img style="width: 50px; height: 50px;" src="<%= objPD.avata %>"> </th>

                    <th><%= objPD.introduction %></th>

                    <th><%= objPD.price %></th>

                    <th><%= objPD.promotion %> %</th>

                    <th>
                        <% 
                        if (objPD.type != null){ %>
                            <%= objPD.type.name %>
                            <%
                        }
                        %>
                    </th>
                    <th>
                        <% 
                        if (objPD.color != null){ %>
                            <%= objPD.color.name %>
                            <%
                        }
                        %>
                    </th>
                    <th>
                        <% 
                        if (objPD.size != null){ %>
                            <%= objPD.size.name %>
                            <%
                        }
                        %>
                    </th>
                   
                    <th><%= objPD.quantity %></th>
                
                    <th>
                        <a href="/sanpham/edit/<%= objPD._id %>" class="btn btn-primary btn-sm"> Edit</a> |
                        <a href="/sanpham/del/<%= objPD._id %>" class="btn btn-danger btn-sm"> Del</a> |
                        <a href="/sanpham/detail/<%= objPD._id %>" class="btn btn-success btn-sm"> Detail</a> 
                    </th>
                </tr>
                <% }); %>
        </tbody>
    </table>
    </div>

    

    <%- include('../inc/bottom') %>